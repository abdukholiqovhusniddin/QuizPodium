@page
@model WebApi.Pages.User.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>User Registration</h2>

<form method="post" class="mt-4">

    <div class="mb-3">
        <label class="form-label">Username</label>
        <input asp-for="RegisterDto.Username" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="RegisterDto.Email" type="email" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">User Role</label>
        <select asp-for="RegisterDto.UserRole" class="form-select">
            <option value="1">Teacher</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>

@if (Model.Message != null)
{
    <div class="alert alert-info mt-3">@Model.Message</div>
}
